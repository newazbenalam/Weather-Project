<div class="scroller-warpper">
  <div class="media-scroller w-full rounded-lg">
    <div
      class="h-12 text-center items-center rounded-lg bg-white dark:bg-dark-second hover:bg-gray-100 dark:hover:bg-dark-third dark:text-dark-txt shadow "
      onclick="bar()">
      <p>Bar Chart</p>
    </div>
    <div
      class="h-12 text-center items-center rounded-lg bg-white dark:bg-dark-second hover:bg-gray-100 dark:hover:bg-dark-third dark:text-dark-txt shadow ">
      <p>Box Chart</p>
    </div>
