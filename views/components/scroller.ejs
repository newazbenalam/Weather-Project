<style>
  ::-webkit-scrollbar {
    display: none;
  }

  .media-scroller {
    -ms-overflow-style: none;
    /* display: grid; */
    grid-auto-flow: column;
    overflow-x: auto;
    gap: 0.1rem;
    overscroll-behavior-inline: contain;

    box-sizing: content-box;
  }
  .media-scroller p{
    padding: auto;
    text-align: center;
  }
